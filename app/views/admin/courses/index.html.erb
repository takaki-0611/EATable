<% provide(:title, "コース") %>
<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <ul class="text-center nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item w-50 bg-light">
          <a class="nav-link active link-text" id="list-tab" data-toggle="tab" href="#list" role="tab" aria-controls="list" aria-selected="true">コース一覧</a>
        </li>
        <li class="nav-item w-50 bg-light">
          <a class="nav-link link-text" id="new-tab" data-toggle="tab" href="#new" role="tab" aria-controls="new" aria-selected="false">新規登録</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 px-sm-0 offset-sm-1">
          <h2 class="my-5">コース一覧</h2>
        </div>
        <div class="col-sm-2 px-sm-0 text-right mt-5">
          <%= link_to admin_course_path, class:"btn btn-outline-secondary" do %>
            <i class="fas fa-plus fa-2x"></i>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-10 offset-1">
          <%= render "index", items: @courses %>
          <%= paginate @courses %>
        </div>
      </div>
      <div class="text-right">
        <%= link_to "トップページへ", admin_root_path, class:"btn btn-light" %>
      </div>
    </div>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <h2>新規登録</h2>
    <div class="col-sm-10 px-sm-0 mx-auto md-5">
      <%= form_with model: @course, url: admin_courses_path, local: true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <th><%= f.label :コース画像 %></th>
            <th><%= f.attachment_field :image %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :コース名 %></th>
            <th><%= f.text_field :name, placeholder:"コース名" %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :税込価格 %></th>
            <th><%= f.text_field :total_payment, placeholder:"1000" %>円</th>
          </div>
        </tr>
        <tr>
          <div class="form-action">
            <th><%= f.submit "新規登録", class:"btn btn-success" %></th>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>