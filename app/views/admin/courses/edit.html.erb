<% provide(:title, "コース編集") %>
<div class="container">
  <h2 class="text-center my-5">コース編集</h2>
  <div class="row">
    <div class="col-8 offset-2 md-5">
      <%= form_with model: @course, url: admin_course_path, local: true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <%= f.label :コース画像, class:"form_label" %>
            <%= f.attachment_field :image, class:"md-3 ml-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :コース名, class:"form_label" %>
            <%= f.text_field :name, placeholder: "コース名", class:"form-control md-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :価格, class:"form_label my-3" %>
            <%= f.text_field :total_payment, size:"15" %>円
          </div>
        </tr>
        <tr>
          <div class="form-action d-flex justify-content-around">
            <%= f.submit "変更を保存する", class:"btn btn-success" %>
            <%= link_to "コース詳細へ戻る", admin_item_path, class:"btn btn-outline-secondary" %>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>